<?xml version="1.0"?>
<robot name="olaf">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
            <material name="silver">
                <color rgba="0.75 0.75 0.75 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="5.0"/>
            <inertia ixx="0.08" ixy="0.13" ixz="0.08" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>
    <!--######################## LIDAR ########################-->
    <link name="lidar_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.05"/>
            <inertia ixx="5.15e-5" ixy="5.15e-5" ixz="6.15e-5" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
    </link>
    <joint name="rostopic" type="fixed">
        <origin xyz="0.0 0.0 0.12" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="lidar_link"/>
    </joint>
    <!--######################## left wheel ########################-->

    <link name="left_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="6.4e-3" ixy="3.6e-3" ixz="3.6e-3" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="1.57079632679 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.57079632679 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
        </collision>
    </link>
    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.1 0.25 -0.05" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 1 0"/>
    </joint>



    <!--######################## right wheel ########################-->
    <link name="right_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="6.4e-3" ixy="3.6e-3" ixz="3.6e-3" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="1.57079632679 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.57079632679 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
        </collision>
    </link>
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.1 -0.25 -0.05" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 1 0"/>
    </joint>
    <!--######################## back wheel ########################-->

    <link name="axis_link">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.02"/>
            </geometry>
            <material name="silver">
                <color rgba="0.75 0.75 0.75 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.01 0.01 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.10"/>
            <inertia ixx="0.0003" ixy="0.0003" ixz="0.0003" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>

    <joint name="axis_joint" type="continuous">
        <origin xyz="-0.2 0 -0.11" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="axis_link"/>
        <axis xyz="0.0 0 1"/>
    </joint>
    <link name="back_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>
            <mass value="0.1"/>
            <inertia ixx="5.15e-5" ixy="5.15e-5" ixz="6.15e-5" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="black">
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
    </link>
    <joint name="back_wheel_joint" type="continuous">
        <origin xyz="-0.01 0 0" rpy="0.0 0.0 0.0"/>
        <parent link="axis_link"/>
        <child link="back_wheel"/>
        <axis xyz="0.0 1 0"/>

    </joint>

    <gazebo>        <!-- DIFFERENTIAL DRIVE -->
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <!-- Name of left joint, defaults to `left_joint` -->
            <leftJoint>left_wheel_joint</leftJoint>

            <!-- Name of right joint, defaults to `right_joint` -->
            <rightJoint>right_wheel_joint</rightJoint>

            <!-- The distance from the center of one wheel to the other, in meters, defaults to 0.34 m -->
            <wheelSeparation>0.5</wheelSeparation>

            <!-- Diameter of the wheels, in meters, defaults to 0.15 m -->
            <wheelDiameter>0.160</wheelDiameter>

            <!-- Wheel acceleration, in rad/s^2, defaults to 0.0 rad/s^2 -->
            <wheelAcceleration>0.10</wheelAcceleration>

            <!-- Maximum torque which the wheels can produce, in Nm, defaults to 5 Nm -->
            <!--BA_Brauner S.25 definiert-->
            <wheelTorque>6</wheelTorque>

            <!-- Topic to receive geometry_msgs/Twist message commands, defaults to `cmd_vel` -->
            <commandTopic>cmd_vel</commandTopic>

            <!-- Robot frame to calculate odometry from, defaults to `base_footprint` -->
            <robotBaseFrame>base_link</robotBaseFrame>

            <!-- Odometry source, 0 for ENCODER, 1 for WORLD, defaults to WORLD -->
            <odometrySource>1</odometrySource>

            <!-- Set to true to publish transforms for the wheel links, defaults to false -->
            <publishWheelTF>true</publishWheelTF>

            <!-- Set to true to publish transforms for the odometry, defaults to true -->
            <publishOdom>true</publishOdom>

            <!-- Set to true to publish sensor_msgs/JointState on /joint_states for the wheel joints, defaults to false -->
            <publishWheelJointState>true</publishWheelJointState>

            <!-- Set to true to swap right and left wheels, defaults to true -->
            <legacyMode>false</legacyMode>
        </plugin>
    </gazebo>

    <gazebo reference="left_wheel">        <!-- FRICTION VALUES -->
        <mu1 value="1.0"/>
        <mu2 value="1.0"/>
        <kp value="10000000.0" />
        <kd value="1.0" />

        <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="right_wheel">        <!-- FRICTION VALUES -->
        <mu1 value="1.0"/>
        <mu2 value="1.0"/>
        <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo>        <!-- JOINT STATE PUBLISHER -->
        <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
            <jointName>axis_joint, back_wheel_joint</jointName>
        </plugin>
    </gazebo>

    <gazebo reference="lidar_link">        <!-- LIDAR Quelle: https://classic.gazebosim.org/tutorials?tut=ros_gzplugins#Laser -->
        <sensor name="lidar_sensor" type="ray">
            <pose>0.0 0 0.0 0 0 0</pose>
            <visualize>false</visualize>
            <update_rate>40</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1.00000</resolution>
                        <min_angle>0.000000</min_angle>
                        <max_angle>6.280000</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.120000</min>
                    <max>12</max>
                    <resolution>0.01000</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <!-- Noise parameters based on published spec for Hokuyo laser
                        achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
                        stddev of 0.01m will put 99.7% of samples within 0.03m of the true
                        reading. -->

                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_lidar_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>lidar_link</frameName>
            </plugin>
        </sensor>
    </gazebo>
</robot>
